{
    "version": 0.1,
    "env": {
        "MY_VARIABLE": "true",
        "NODE_ENV": "production"
    },
    "routes": [
        {
          "src": "/api/hello",
          "dest": "/api/hello.js"
        }
      ],
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
          },
        {
            "src": "nuxt.config.js",
            "use": "@nuxtjs/vercel-builder",
            "config": {
                "generateStaticRoutes": true,
                "env": {
                    "MY_VARIABLE": true
                },
                "serverFiles": [
                    "api/**"
                ]
            }
        }
    ]
}
